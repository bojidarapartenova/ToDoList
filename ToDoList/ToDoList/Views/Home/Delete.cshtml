@model ToDoList.ViewModels.DeleteItemViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2 style="text-align:center; margin-bottom:30px;">@ViewData["Title"]</h2>

<div class="container d-flex justify-content-center">
    <div class="card p-4" style="max-width:500px; width:100%;">
        <h4 class="mb-3">Are you sure you want to delete this task?</h4>
        <p>"<strong>@Model.Description</strong>"</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Description" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-sm custom-delete">Delete</button>
                <a asp-action="Index" class="btn btn-sm custom-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #d8e1e8, #aab8c6);
    }

    .card {
        background-color: #ffffffcc;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-sm.custom-delete {
        background-color: #c94a4a;
        color: #fff;
        transition: all 0.3s ease;
    }

    .btn-sm.custom-delete:hover {
        background-color: #e05252;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .btn-sm.custom-cancel {
        background-color: #6c757d;
        color: #fff;
        transition: all 0.3s ease;
    }

    .btn-sm.custom-cancel:hover {
        background-color: #5a6268;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }
</style>
